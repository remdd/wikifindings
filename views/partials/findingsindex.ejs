<div class="paginationDiv">
	<span>Showing maximum of <%= findings.limit %> results per page - page <%= findings.page %> of <%= findings.pages %> (<%= findings.total %> pages total)</span>
</div>

<% findings.docs.forEach(function(finding){ %>
	<div class="fThumbDiv">
		<div class="fThumbSubject">
			<div class="fThumbSubjectGroupColorDiv" style="background: 
				<% for(var i = 0; i < allSubjects.length; i ++) { 
					if(allSubjects[i].categoryName === finding.category) {
						for(var j = 0; j < allSubjects[i].subjectGroups.length; j ++) {
							if(allSubjects[i].subjectGroups[j].subjectGroupName === finding.subjectGroup) { %>
								<%= allSubjects[i].subjectGroups[j].subjectGroupColor %>;
							<% }
						}
					}
				} %>
			">
			</div>
			<a href="/findings/s?subject=<%= finding.subject %>"><%= finding.subject %></a>



		</div>
		<div class="fThumbTags">keywords: 
			<% if(finding.keywords) {
				for(var i = 0; i < 5; i ++) {
					if(finding.keywords[i]) { %>
						<a href="/findings/k?keyword=<%= finding.keywords[i] %>"><%= finding.keywords[i]; %></a>
						<% if(i < finding.keywords.length - 1 && i < 4) {%>, <% } %> 
				<% }} %>
				<% if(finding.keywords.length > 5) { %>...<%}%>
			<% } %>
		</div>
		<a class="mutedLink" href="/findings/<%= finding._id %>">
			<h4><%= finding.title %></h4>
		</a>
		<p>Posted by:
			<span class="fThumbPostedBy"><a href="/findings/p?postAuthor=<%= finding.postAuthor.username %>"><%= finding.postAuthor.username %></a></span>
			<span class="fThumbDate">Posted <%= finding.datePosted.toDateString() %></span>
		</p>
	</div>
<% }); %>
