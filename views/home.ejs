<!DOCTYPE html>
<html>
	<head>
		<title>Wikifindings</title>
		<script type="text/javascript" src="/lib/jquery-3.3.1.min.js"></script>
		<link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
		<link rel="stylesheet" type="text/css" href="/css/wikifindings.css">
		<link rel="stylesheet" type="text/css" href="/css/wf_home.css">
		<link href="https://fonts.googleapis.com/css?family=Alegreya+SC|Pridi" rel="stylesheet">
		<script type="text/javascript" src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
	</head>
	<body>
		<div class="homepageDiv">
			<div class="homepageContents">
				<a href="/findings" class="mutedLink">
					<div class="homepageContentContainer">
						<div class="homepageHeaderDiv">
							<img class="headerLogo" src="/img/wf_placeholder_logo.png" />
							<h1 class="headerText">WikiFindings</h1>
						</div>
					</div>
				</a>

				<br />
				<a href="/findings" class="mutedLink">
					<div class="homepageContentContainer">
						<h3>The dynamic repository of lay summaries of research articles.</h3>
					</div>
				</a>

				<hr />
				<a href="/findings" class="mutedLink">
					<div class="homepageContentContainer">
						<h4>Enter</h4>
					</div>
				</a>

				<% if(currentUser && currentUser.isScientist === true) { %> %>
					<hr />
					<a href="/findings/new" class="mutedLink">
						<div class="homepageContentContainer">
							<h4>Post a new Finding</h4>
						</div>
					</a>
				<% } %>

				<hr />
				<% if(!currentUser) { %>
					<div class="homepageContentContainer">
						<a href="/register" class="mutedLink">
							<h4>Register</h4>					
						</a>
						/
						<a href="/login" class="mutedLink">
							<h4>Log in</h4>					
						</a>
					</div>
   				<% } else { %>
					<div class="homepageContentContainer">
						<a href="/users/<%= currentUser.username %>" class="mutedLink">
							<h4>View your user profile (logged in as <%= currentUser.username %>)</h4>
						</a>
						/
						<a href="/logout" class="mutedLink">
							<h4>Log out</h4>					
						</a>
					</div>
				<% } %>

				<hr />
				<a href="/about" class="mutedLink">
					<div class="homepageContentContainer">
						<h4>About WikiFindings</h4>
					</div>
				</a>
			</div>	
		</div>
	</body>
</html>